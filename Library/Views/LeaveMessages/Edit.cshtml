@model Library.Models.LeaveMessage

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>编辑留言</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Body,"留言内容", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Body, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
            </div>
        </div>

        @{User user = (User)Session["User"];}
        <input type="text" name="AuthorId" value="@user.Id" hidden />
        <input type="text" name="Time" value="@DateTime.Now" hidden />


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="确认修改" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <a href="/LeaveMessages/Index" class="btn btn-default">返回</a>
</div>
