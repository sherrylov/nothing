@model IEnumerable<Library.Models.BookIO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>进书目录</h2>

<p>
    <a href="/BookIOs/Create" class="btn btn-default">添加进书记录</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Book.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Number)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Book.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Number)
        </td>
        <td>
            <a href="/BookIOs/Edit/@item.Id" class="btn btn-default">更改图书信息</a>
            <a href="/BookIOs/Details/@item.Id" class="btn btn-default">详细进书信息</a>
            <a href="/BookIOs/Delete/@item.Id" class="btn btn-default">删除进书信息</a>
        </td>
    </tr>
}

</table>
